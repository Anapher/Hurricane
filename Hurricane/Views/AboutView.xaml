                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock>
                            <Hyperlink NavigateUri="{Binding Url}" RequestNavigate="Hyperlink_RequestNavigate" Style="{StaticResource hyperlink}">
                                <TextBlock Text="{Binding Name}"/>
                            </Hyperlink>
                        </TextBlock>
                            <TextBlock Text="{Binding Description}" Grid.Column="1" TextWrapping="Wrap"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock Text="{DynamicResource images}" Style="{StaticResource TextBlockHeader}" Margin="0,30,0,0"/>
            <ItemsControl ItemsSource="{Binding ElementName=aboutcontrol,Path=ImageCreators}" Margin="0,10,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}"/>
                            <TextBlock Grid.Column="1">
                                <Hyperlink NavigateUri="{Binding Licence}" RequestNavigate="Hyperlink_RequestNavigate" Style="{StaticResource hyperlink}">
                                    <TextBlock Text="{DynamicResource licence}"/>
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Grid.Column="2">
                                <Hyperlink NavigateUri="{Binding Website}" RequestNavigate="Hyperlink_RequestNavigate" Style="{StaticResource hyperlink}">
                                    <TextBlock Text="{DynamicResource website}"/>
                                </Hyperlink>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock Text="{DynamicResource thanks}" Style="{StaticResource TextBlockHeader}" Margin="0,30,0,0"/>
